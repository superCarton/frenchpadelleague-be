{
  "kind": "collectionType",
  "collectionName": "clubs",
  "info": {
    "singularName": "club",
    "pluralName": "clubs",
    "displayName": "Club"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "mappedBy": "club"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "address": {
      "type": "component",
      "component": "shared.address",
      "repeatable": false
    },
    "hasRestaurant": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "contactEmail": {
      "type": "email",
      "required": false
    },
    "phoneNumber": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "players": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::player.player",
      "mappedBy": "club"
    },
    "instagramLink": {
      "type": "string"
    },
    "website": {
      "type": "string"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "tournaments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tournament.tournament",
      "mappedBy": "club"
    },
    "nextMatch": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::match.match"
    },
    "opening_hours": {
      "type": "component",
      "component": "shared.opening-hour",
      "repeatable": true
    },
    "padelCourts": {
      "type": "component",
      "component": "shared.padel-court",
      "repeatable": true
    }
  }
}
