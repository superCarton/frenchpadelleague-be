{
  "kind": "collectionType",
  "collectionName": "players",
  "info": {
    "singularName": "player",
    "pluralName": "players",
    "displayName": "Player"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user",
      "mappedBy": "player"
    },
    "club": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::club.club",
      "inversedBy": "players"
    },
    "matchesHistory": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::match.match"
    },
    "league": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::league.league"
    },
    "photo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "firstname": {
      "type": "string",
      "required": true
    },
    "lastname": {
      "type": "string",
      "required": true
    },
    "birthdate": {
      "type": "date",
      "required": true
    },
    "payments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::payment.payment",
      "mappedBy": "payer"
    },
    "gender": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "male",
        "female"
      ]
    },
    "phoneNumber": {
      "type": "string"
    },
    "playerStat": {
      "type": "component",
      "component": "shared.elo-stat",
      "repeatable": false
    }
  }
}
