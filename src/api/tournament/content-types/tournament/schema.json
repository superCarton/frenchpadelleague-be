{
  "kind": "collectionType",
  "collectionName": "tournaments",
  "info": {
    "singularName": "tournament",
    "pluralName": "tournaments",
    "displayName": "Tournament"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "club": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::club.club",
      "inversedBy": "tournaments"
    },
    "startDate": {
      "type": "datetime",
      "required": true
    },
    "endDate": {
      "type": "datetime",
      "required": true
    },
    "registrationDeadline": {
      "type": "datetime"
    },
    "league": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::league.league",
      "inversedBy": "tournaments"
    },
    "referee": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::referee.referee",
      "inversedBy": "tournaments"
    },
    "matches": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::match.match",
      "mappedBy": "tournament"
    },
    "isMaster": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "maxTeams": {
      "type": "integer",
      "required": false
    },
    "registrationFee": {
      "type": "integer"
    },
    "description": {
      "type": "text"
    },
    "allocatedCourts": {
      "type": "integer"
    },
    "prizeMoney": {
      "type": "integer"
    },
    "currentStatus": {
      "type": "enumeration",
      "required": true,
      "default": "pending",
      "enum": [
        "pending",
        "validated",
        "ongoing",
        "completed",
        "cancelled"
      ]
    },
    "gameFormat": {
      "type": "string"
    },
    "teams": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::team.team",
      "mappedBy": "tournament"
    },
    "address": {
      "type": "component",
      "component": "shared.address",
      "repeatable": false,
      "required": true
    }
  }
}
